<h1>Editar taller de <%= @name %></h1>
<form action="/<%=@name%>" method="post">
  <input type="hidden" name="_method" value="put">
  <fieldset>
    <textarea name="description" rows="8" cols="80" value="<%= @description %>" id="description">
      <%= @description %>
    </textarea>
  </fieldset>
  <input type="submit" name="description" value="Editar Taller">
</form>
